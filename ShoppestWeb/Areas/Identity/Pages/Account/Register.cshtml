@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="card shadow border-0 my-3">
    <div class="card-header bg-primary">
        <div class="row">
            <div class="col-12 text-center text-light">
                <h2>Create a new account.</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="row">
                        <div class="col-12 form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12 form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12 form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger">
                            </span>
                        </div>
                        <div class="col-md-6 col-12 form-floating mb-3">
                            <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="text" />
                            <label asp-for="Input.Name">Full Name</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12 form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="text" />
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12 form-floating mb-3">
                            <input asp-for="Input.Region" class="form-control" aria-required="true" placeholder="text" />
                            <label asp-for="Input.Region">Region</label>
                            <span asp-validation-for="Input.Region" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12 form-floating mb-3">
                            <input asp-for="Input.Province" class="form-control" aria-required="true" placeholder="text" />
                            <label asp-for="Input.Province">Province</label>
                            <span asp-validation-for="Input.Province" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12 form-floating mb-3">
                            <input asp-for="Input.Barangay" class="form-control" aria-required="true" placeholder="text" />
                            <label asp-for="Input.Barangay">Barangay</label>
                            <span asp-validation-for="Input.Barangay" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12 form-floating mb-3">
                            <input asp-for="Input.StreetAddress" class="form-control" aria-required="true" placeholder="text" />
                            <label asp-for="Input.StreetAddress">St. Address</label>
                            <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12 form-floating mb-3">
                            <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="text" />
                            <label asp-for="Input.PostalCode">Postal Code</label>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-12 form-floating mb-3">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control">
                                <option selected disabled>-Select Role-</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-12">
                <section>
                    <hr />
                    <h3>Use another service to register.</h3>
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                        article
                                        about setting up this ASP.NET application to support logging in via external services
                                    </a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>

    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
