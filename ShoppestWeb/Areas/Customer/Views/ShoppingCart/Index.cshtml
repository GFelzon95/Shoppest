@model ShoppingCartIndexVM

<div class="card border-0 my-3 shadow">
    <div class="card-header bg-primary">
        <div class="row">
            <div class="col-12 text-center text-light">
                <h2>Shopping Cart</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-start mb-3">
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary mx-5">Continue Shopping</a>
        </div>
        <div class="container px-5">
            @foreach(var cart in Model.ShoppingCartList)
            {
                <div class="card border-0 shadow my-2">
                    <div class="row">
                        <div class="col-2 mt-2" style="width:200px; height:auto">
                            <div class="d-flex justify-content-center">
                                <img src="@cart.Product.PictureUrl" width="100%"/>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex justify-content-start mt-2">
                                <h5 class="text-primary">Title</h5>
                            </div>
                            <p class="text-info">@cart.Product.Price.ToString("c")</p>
                        </div>
                        <div class="col-3 d-flex align-items-center">
                            <div class="d-flex justify-content-end">
                                <div class="input-group">
                                    <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Minus" asp-route-id="@cart.Id" class="form-control btn btn-dark d-flex align-items-center"><i class="bi bi-dash-lg"></i></a>
                                    <span class="input-group-text">@cart.Count</span>
                                    <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Plus" asp-route-id="@cart.Id" class="form-control btn btn-primary d-flex align-items-center"><i class="bi bi-plus-lg"></i></a>
                                </div>
                                <div class="ms-4">
                                    <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Delete" asp-route-id="@cart.Id" class="btn btn-danger btn-lg d-flex align-items-center"><i class="bi bi-trash"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="mt-3">
                <div class="d-flex justify-content-center">
                    <div style="width:500px">
                        <div class="d-flex justify-content-between">
                            <h4 class="text-primary">Total</h4>
                            <p class="lead">@Model.TotalPrice.ToString("c")</p>
                        </div>
                    </div>
                </div>
                <div class ="d-flex justify-content-center mb-3">
                    <a class="btn btn-primary btn-lg" style="width:500px">Summary</a>
                </div>
            </div>
        </div>
    </div>
</div>