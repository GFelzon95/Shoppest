@model HomeDetailsVM

    <div class="card border-0 shadow">
        <div class="card-body py-4">
            <div class="row">
                <div class="col-6">
                    <div class="container d-flex justify-content-center" style="height:450px; width:620px;">
                            <img src="@Model.Product.PictureUrl" height="450" />
                    </div>
                </div>
                <div class="col-6">
                    <h4 class="text-info mt-2">@Model.Product.Name</h4>
                    <hr class="me-4"/>
                    <div class="d-flex flex-row mb-3">
                        <h5 class="text-info w-25">Category:</h5>
                        <h5 class="text-primary w-75">@Model.Product.ProductCategory.Name</h5>
                    </div>
                    <div class="d-flex flex-row mb-3">
                        <h5 class="text-info w-25">Price:</h5>
                        <h5 class="text-primary w-75">@Model.Product.Price.ToString("c")</h5>
                    </div>
                    <div class="d-flex flex-row mb-3">
                        <h5 class="text-info w-25">Quantity:</h5>
                        <h5 class="text-primary w-75">@Model.Product.Quantity</h5>
                    </div>
                    <div class="d-flex flex-row mb-3">
                        <div class="input-group w-50">
                        <span class="input-group-text bg-primary text-light"><strong>Count</strong></span>
                            <input asp-for="@Model.Count" class="form-control" />
                        </div>
                    </div>
                    <div class="d-flex align-items-end mt-5 h-25">
                        <a href="#" class="btn btn-primary w-75" disabled>Add to cart(coming soon...)</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


