@model ProductCategoryFormVM;

<div class="card shadow border-0 my-3">
    <div class="card-header bg-primary">
        <div class="row">
            <div class="col-12 text-center text-light">
                <h2>@(Model.FormSettings.Title) Product Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="m-2">
                <div class=" mb-3 row p-1">
                    <div class="form-floating py-3 col-12">
                        @if (Model.IsDelete == false)
                        {
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2 text-black-50"></label>

                            <span asp-validation-for="Name" class="text-danger"></span>
                        }
                        @if (Model.IsDelete == true)
                        {
                            <input asp-for="Name" class="form-control border-0 shadow" disabled />
                            <label asp-for="Name" class="ms-2 text-black-50"></label>

                        }
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">@Model.FormSettings.ButtonStr</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="ProductCategory" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
    </div>

