@model Shoppest.Models.ViewModels.ProductCategoryForm;

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="row mb-1 p-2">
            <h2 class="text-bg-danger-primary">@Model.FormSettings.Title</h2>
            <hr />
        </div>
    
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            @if (Model.IsDelete == false)
            {
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

            }
            @if (Model.IsDelete == true)
            {
                <input asp-for="Name" class="form-control" disabled/>
            }
        </div>

        <div class="row p-1">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">@Model.FormSettings.ButtonStr</button>
            </div>
            <div class="col-6 col-md-3">
                    <a asp-controller="ProductCategory" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

 @section Scripts{
     <partial name="_ValidationScriptsPartial" />
 }           