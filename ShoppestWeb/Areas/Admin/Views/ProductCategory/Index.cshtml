@model ProductCategoryIndexVM;

<div class="card shadow border-0 my-3 shadow">
    <div class="card-header bg-primary">
        <div class="row">
            <div class="col-12 text-center text-light">
                <h2>Product Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row pb-3">
                <div class="col-12 text-end pe-0">
                    <a asp-controller="ProductCategory" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Category
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="col-6">Name</th>
                    <th class="col-6"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.ProductCategories)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <div class="w-100 btn-group px-3" role="group">
                                <a asp-controller="ProductCategory" asp-action="Upsert" asp-route-id="@category.Id" class="btn btn-primary ms-2"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger ml-2"><i class="bi bi-trash-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

