@model Shoppest.Models.ViewModels.ProductCategoryIndex;


<div class="container">
    <div class="row pb-3">
        <div class="col-6 pt-2 ps-0">
            <h2 class="text-primary">Product Category List</h2>
        </div>
        <div class="col-6 text-end pe-0">
            <a asp-controller="ProductCategory" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th class="col-6">Name</th>
            <th class="col-6"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model.ProductCategories)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <div class="w-100 btn-group px-3" role="group">
                        <a asp-controller="ProductCategory" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>